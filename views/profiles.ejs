<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 50%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
    </style>
  <title>Profiles</title>
  </head>

  <body>
  <center><h3>Profiles INFO</h3><center><br>
  <a href="/profiles/add"><button type="Submit" name="Add">Add New Profiles</button></a>
  <br><br>
  <form action="/profiles" method="POST">
  <center>
  <table>
    <tr>
      <th>ID</th>
      <th>Home Town</th>
      <th>Birth Year</th>
      <th>Relationship Status</th>
      <th>User Id</th>
      <th>Username</th>
      <th colspan='2'><center>Option</center></th>
    </tr>
    <%=JSON.stringify(dataProfiles)%>
    <% dataProfiles.forEach(profiles =>{%>
    <tr>
      <td><%= profiles.id %></td>
      <td><%= profiles.hometown %></td>
      <td><%= profiles.birth_year %></td>
      <td><%= profiles.relationship_status %></td>
      <td><%= profiles.user_id %></td>
      <td><%= profiles.username %></td>
      <td><a href="/profiles/edit/<%=profiles.id%>"><button type="button" name="Edit">EDIT</button></a></td>
      <td><a href="/profiles/delete/<%=profiles.id%>"><button type="button" name="Delete">DELETE</button></a></td>
      </tr>
      <%})%>
    </table>
  </center>
    </form>
  </body>
</html>
