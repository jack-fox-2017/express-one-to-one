<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profiles</title>
  </head>
  <body>
    <h1>Profiles</h1>
    <table border="1">
      <thead>
        <tr>
          <th>Id</th>
          <th>Hometown</th>
          <th>Birth Year</th>
          <th>Status</th>
          <th>User id</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% dataProfiles.forEach(d =>{ %>
        <tr>
          <td><%= d.id %></td>
          <td><%= d.hometown %></td>
          <td><%= d.birth_year %></td>
          <td><%= d.relationship_status %></td>
          <td><%= d.users_id %></td>
          <td><a href="/profiles/edit/<%= d.id %>">Edit</a></td>
          <td><a href="/profiles/delete/<%= d.id %>">Delete</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <br><br><br>
    <form action="/profiles" method="post">
      <input type="text" name="hometown" placeholder="Hometown"><br>
      <input type="text" name="birth_year" placeholder="Birth Year"><br>
      <input type="text" name="relationship_status" placeholder="Relationship Status"><br>
      <select class="" name="users_id">
        <% dataUsers.forEach(dU =>{ %>
        <option value="<%=dU.id%>"><%= dU.username %></option>
        <% }) %>
      </select><br><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
