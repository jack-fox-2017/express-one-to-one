<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>INFO ata User</title>
  </head>
  <body>
    <center>
    <h1>Data Users</h1>
    <a href = "/users/add"> <button type="button" name="buttons">Tambah Users</button></a><br><br>
    <table border = "1">
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Hapus</th>
    </tr>
    <%data_users.forEach(dataUsr => {%>
      <tr>
        <td><%=dataUsr.id%></td>
        <td><%=dataUsr.username%></td>
        <td><%=dataUsr.firstname%></td>
        <td><%=dataUsr.lastname%></td>
        <td><%=dataUsr.email%></td>
        <td><a href="/users/edit/<%=dataUsr.id%>"> <button type="button" name="buttons">Ganti</button></a></td>
        <td><a href="/users/delete/<%=dataUsr.id%>"> <button type="button" name="buttons">Hapus</button></a></td>
      </tr>
    <%})%>
  </table>
  <br>
  <a href = "/"> <button type="button" name="buttons">Back</button></a><br><br>
</center>
  </body>
</html>
