<!DOCTYPE html>
<html>
<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
</head>
<body>

<h1> Halaman Users </h1>
  <a href="/">Home</a>
  <br><br>
<table>
  <tr>
    <th>Id</th>
    <th>Username</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Detail Profiles</th>
    <th>Edit</th>
    <th>Delete</th>

  </tr>
  <% data.forEach(d => { %>
  <tr>
    <td><%=d.id%></td>
    <td><%=d.username%></td>
    <td><%=d.firstname%></td>
    <td><%=d.lastname%></td>
    <td><%=d.email%></td>
    <td><a href="/users/detailProfilesUsers/<%= d.id %>">Detail Profiles</a></td>
    <td><a href="/users/editUsers/<%= d.id %>">Edit</a></td>
    <td><a href="/users/deleteUsers/<%= d.id %>">Delete</a></td>

  </tr>
  <% }) %>
</table>

<h1> </h1>
<form action="/users" method="post">
  <fieldset>
    <legend>Tambah Users </legend>
    Username:<br>
    <input type="text" name="username">
    <br>
    firstname:<br>
    <input type="text" name="firstname">
    <br>
    lastname:<br>
    <input type="text" name="lastname">
    <br>
    email:<br>
    <input type="text" name="email">
    <br><br>
    <button type="submit">Save</button>

</body>
</html>
