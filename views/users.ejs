<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 50%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
    </style>
  <title>Contact</title>
  </head>

  <body>
  <center><h3>Users INFO</h3><center><br>
  <a href="/users/add"><button type="Submit" name="Add">Add New Users</button></a>
  <br><br>
  <form action="/users" method="POST">
  <center>
  <table>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan='2'><center>Option</center></th>
    </tr>
    <% dataUsers.forEach(users =>{%>
    <tr>
      <td><%= users.id %></td>
      <td><%= users.username %></td>
      <td><%= users.firstname %></td>
      <td><%= users.lastname %></td>
      <td><%= users.email %></td>
      <td><a href="/users/edit/<%=users.id%>"><button type="button" name="Edit">EDIT</button></a></td>
      <td><a href="/users/delete/<%=users.id%>"><button type="button" name="Delete">DELETE</button></a></td>
      </tr>
      <%})%>
    </table>
  </center>
    </form>
  </body>
</html>
