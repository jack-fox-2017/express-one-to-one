<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h2>Users</h2>
    <form action="/users" method="post">
      <input type="text" name="username" placeholder="Username">
      <input type="text" name="firstname" placeholder="First Name">
      <input type="text" name="lastname" placeholder="Last Name">
      <input type="text" name="email" placeholder="Email">
      <button type="submit" name="submit">Add</button>
    </form><br>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(d => { %>
        <tr>
          <td><%= d.id %></td>
          <td><%= d.username %></td>
          <td><%= d.firstname %></td>
          <td><%= d.lastname %></td>
          <td><%= d.email %></td>
          <td><a href="/users/edit/<%= d.id %>">EDIT</a></td>
          <td><a href="/users/delete/<%= d.id %>">DELETE</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table><br>
    <a href="/">Back</a>
  </body>
</html>
