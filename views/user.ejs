<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,700" rel="stylesheet">
    <style media="screen">
      .main {
        color: #0FA3B1;
        padding: 48px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -580px; /* margin is -0.5 * dimension */
        margin-top: -320px;
        font-family: 'Raleway', sans-serif;
      }

    </style>
  </head>
  <body>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Home</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/user">Users</a></li>
      <li><a href="/profile">Profiles</a></li>
    </ul>
    </div>
    </nav>
    <div class="main">
      <h1>Users</h1>
      <table class="table table-bordered">
        <tr>
          <th>ID</th>
          <th class="text-center">Username</th>
          <th class="text-center">First Name</th>
          <th class="text-center">Last Name</th>
          <th class="text-center">Email</th>
          <th class="text-center" colspan="2">Action</th>
        </tr>
        <% data.forEach(d => { %>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.username %></td>
            <td><%= d.firstname %></td>
            <td><%= d.lastname %></td>
            <td><%= d.email %></td>
            <td><a href="/user/edit-user/<%= d.id%>"><button class="btn btn-info" type="button" name="button">Edit</button></a></td>
            <td><a href="/user/delete/<%= d.id%>"><button class="btn btn-info" type="button" name="button">Delete</button></a></td>
          </tr>
        <% }) %>
      </table>
      <h3>Add User</h3>
      <form action="/user" method="post">
        <div class="form-group">
          <label for="name">Username:</label>
          <input type="text" name="username" placeholder="Username" class="form-control" id="exampleInputEmail1">
        </div>
        <div class="form-group">
          <label for="company">First Name:</label>
          <input type="text" name="firstname" placeholder="First Name" class="form-control" id="exampleInputEmail1">
        </div>
        <div class="form-group">
          <label>Last Name:</label>
          <input type="text" name="lastname" placeholder="Last Name" class="form-control" id="exampleInputEmail1">
        </div>
        <div class="form-group">
          <label>Email:</label>
          <input type="text" name="email" placeholder="Email" class="form-control" id="exampleInputEmail1">
        </div>
        <button class="btn btn-info" type="submit" name="submit">SUBMIT</button>
      </form><br>
    </div>
  </body>
</html>
